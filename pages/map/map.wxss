}
.date {
  text-align: center;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
}
.name {
  width: 400rpx;
  margin: 0 auto;
  min-height: 0;
  overflow: hidden;
  margin-top: 20rpx;
}
.fr{
  margin-left: 90px;
}
.savethedate {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
