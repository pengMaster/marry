  margin-bottom: 20rpx;
}
.savethedate image {
  width: 200rpx;
  height: 200rpx;
}
.diamond {
  width: 400rpx;
  height: 59rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
